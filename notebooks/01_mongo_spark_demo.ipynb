   "source": [
    "# MongoDB + PySpark Notebook\n",
    "This notebook connects to MongoDB, inserts test data, and performs some analytics using PySpark."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "from pyspark.sql import SparkSession\n",
    "from pyspark.sql.functions import explode, col\n",
    "\n",
    "spark = SparkSession.builder \\\n    "    .appName(\"IncidentAnalytics\") \\\n    "    .config(\"spark.mongodb.read.connection.uri\", \"mongodb://admin:adminPW@mongodb:27017/incidents\") \\\n    "    .config(\"spark.mongodb.write.connection.uri\", \"mongodb://admin:adminPW@mongodb:27017/incidents\") \\\n    "    .getOrCreate()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Insert some sample data into Mongo via pymongo\n",
    "from pymongo import MongoClient\n",
    "\n",
    "client = MongoClient(\"mongodb://admin:adminPW@mongodb:27017\")\n",
    "db = client['incidents']\n",
    "\n",
    "db.positive_incidents.insert_one({\n",
    "    'incident_id': 'pos-001',\n",
    "    'summary': 'Phishing avoided due to awareness training.',\n",
    "    'tags': ['training', 'email'],\n",
    "    'year': 2023\n",
    "})\n",
    "\n",
    "db.negative_incidents.insert_one({\n",
    "    'incident_id': 'neg-001',\n",
    "    'summary': 'Data breach via misconfigured S3 bucket.',\n",
    "    'tags': ['cloud', 'config'],\n",
    "    'year': 2022\n",
    "})"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Read from MongoDB\n",
    "df_neg = spark.read.format(\"mongodb\").option(\"collection\", \"negative_incidents\").load()\n",
    "df_pos = spark.read.format(\"mongodb\").option(\"collection\", \"positive_incidents\").load()\n",
    "\n",
    "df_neg.show()\n",
    "df_pos.show()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Count incidents by year\n",
    "df_neg.groupBy(\"year\").count().show()\n",
    "df_pos.groupBy(\"year\").count().show()"
   ]
  }
 ],
